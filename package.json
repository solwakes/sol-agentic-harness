{
  "name": "sol-agentic-harness",
  "version": "1.0.0",
  "description": "Standalone TypeScript agentic harness using Anthropic API with Claude subscription auth",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "fast-glob": "^3.3.2",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Sol",
  "license": "MIT"
}
